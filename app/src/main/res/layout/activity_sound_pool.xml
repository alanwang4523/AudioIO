<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray01"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/ll_chord_container"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <com.alan.audioio.app.ui.PianoKeyItemView
            android:id="@+id/btn_chord_A"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            app:civ_corner_radius="24dp"
            app:civ_fill_color="@color/chord_A"
            app:civ_text="A"
            android:layout_weight="1"
            >
        </com.alan.audioio.app.ui.PianoKeyItemView>

        <com.alan.audioio.app.ui.PianoKeyItemView
            android:id="@+id/btn_chord_B"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            app:civ_corner_radius="24dp"
            app:civ_fill_color="@color/chord_B"
            app:civ_text="B"
            android:layout_weight="1"
            >
        </com.alan.audioio.app.ui.PianoKeyItemView>

        <com.alan.audioio.app.ui.PianoKeyItemView
            android:id="@+id/btn_chord_C"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            app:civ_corner_radius="24dp"
            app:civ_fill_color="@color/chord_C"
            app:civ_text="C"
            android:layout_weight="1"
            >
        </com.alan.audioio.app.ui.PianoKeyItemView>

        <com.alan.audioio.app.ui.PianoKeyItemView
            android:id="@+id/btn_chord_D"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            app:civ_corner_radius="24dp"
            app:civ_fill_color="@color/chord_D"
            app:civ_text="D"
            android:layout_weight="1"
            >
        </com.alan.audioio.app.ui.PianoKeyItemView>

        <com.alan.audioio.app.ui.PianoKeyItemView
            android:id="@+id/btn_chord_E"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:civ_corner_radius="24dp"
            app:civ_fill_color="@color/chord_E"
            app:civ_text="E"
            android:layout_weight="1"
            >
        </com.alan.audioio.app.ui.PianoKeyItemView>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">


        <TextView
            android:id="@+id/btn_stop"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_start_bg"
            android:gravity="center"
            android:text="Stop"
            android:textColor="@color/default_text_black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
